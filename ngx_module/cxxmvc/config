ngx_feature=
ngx_feature_name=
ngx_feature_run=no
ngx_feature_incs=
ngx_feature_path=
ngx_feature_libs=
ngx_feature_test=
ngx_cc=g++
have=NGX_HTTP_HEADERS . auto/have
. auto/feature

if [ $ngx_found = yes ]; then

ngx_addon_name=ngx_http_cxxmvc_module
HTTP_MODULES="$HTTP_MODULES ngx_http_cxxmvc_module"
NGX_ADDON_SRCS="$NGX_ADDON_SRCS $ngx_addon_dir/ngx_http_cxxmvc_module.cpp"
CORE_LIBS="$CORE_LIBS -L/usr/local/lib -lstdc++ -lDragon -ldapmvc -lboost_filesystem -lv8_base.x64 -lv8_nosnapshot.x64"

else
    cat << END
$0: error: unable to configure the ngx_http_accept_language_module.
END
    exit 1
fi
